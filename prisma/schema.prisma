generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

enum Role {
  admin
  user
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      Role     @default(user)
  age       Int?
  gender    Gender?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
